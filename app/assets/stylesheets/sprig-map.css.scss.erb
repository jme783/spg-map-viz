.map-alert.alert-box {
  position: absolute;
  top: 10px;
  left: 31%;
  width: 500px;
  text-align: center;
}
.ajax-loader {
  display: none;
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  background: rgba(255,255,255,0.9);
  .spinner-and-text {
    text-align: center;
    margin-top: 20vh;
  }
}
.button.alert.datepicker-close {
  display: none;
}
.map-container {
  width: 100%;
  margin: 0;
  padding: 0;
  position: relative;
  #map {
    width: 100%;
    height: 100vh;
    img {
      max-width: none;
    }
    label {
      width: auto;
      display: inline;
    }
  }
  .map-controls {
    position: absolute;
    top: 40px;
    right: 40px;
    width: 20%;
    height: 60vh;
    background: #fff;
    border: 1px solid #999;
    padding: 1em;
    .search.button.small {
      margin-top: 10px;
      width: 100%;
    }
    .filter-desc {
      margin-bottom: 5px;
    }
    select {
      margin-top: 7px;
    }
    table.date-table {
      background: #fff;
      border: none;
      .dp-field {
        margin-top: 5px;
        margin-bottom: 0;
      }
      thead {
        background: #fff;
        th {
          padding-left: 0;
          padding-top: 0;
          padding-bottom: 0;
          font-weight: normal;
        }
      }
    }
    .hubs-check-container {
      display: inline-block;
      margin-bottom: 1em;
      padding-left: 5px;
      padding-bottom: 2px;
      border-left: 3px solid;
      &.hub-1 {
        border-left-color: #7993fe;
      }
      &.hub-2 {
        border-left-color: #fe7993;
      }
      &.hub-4 {
        border-left-color: #93fe79;
      }
      &.hub-5 {
        border-left-color: #fea179;
      }
      &.hub-6 {
        border-left-color: #959595;
      }
      &.hub-7 {
        border-left-color: #fee379;
      }
      &.hub-8 {
        border-left-color: #dc4300;
      }
      &.hub-9 {
        border-left-color: #2646c9;
      }
    }
    input.hub-checks {
      margin-bottom: 0;
      cursor: pointer;
    }
     label.hub-labels{
      margin-right: 1em;
    }
    .key {
      position: absolute;
      bottom: 15px;
      left: 0;
      width: 100%;
    }
    .key ul {
      margin-left: 0;
      margin-bottom: 0;
      text-align: center;
      li {
        list-style-type: none;
        display: inline-block;
        position: relative;
        p {
          margin-bottom: 0;
        }
        &.hub {
          padding-left: 23px;
        }
        &.order {
          padding-left: 20px;
          margin-left: 1em;
        }
        &:before {
          content: "";
          position: absolute;
          top: 5px;
          left: 0;
          display: block;
          width: 16px;
          height: 16px;
        }
        &.hub:before {
          background: url(<%= asset_path 'hub-6.png' %>);
          background-size: 100%;
        }
        &.order:before {
          background: url(<%= asset_path 'order-hub-6.png' %>);
          background-size: 100%;
        }
      }
    }
  }
}
